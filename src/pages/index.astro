---
import { getCollection } from "astro:content";

import PostsList from "../components/PostsList.astro";
import Layout from "../layouts/Layout.astro";

const posts = await getCollection("blog");
---

<Layout seo={{ title: "Welcome to Astro." }}>
  <div class="h-40">
    <h1 class="text-heading-1 text-3xl font-bold">Hello, I'm NaDario Seays.</h1>
    <p class="mt-2">
      I'm a Developer Advocate and Software Engineer. I like writing code and
      using Linux
    </p>
  </div>
  <div class="flex flex-col">
    <h2 class="text-2xl font-semibold">Blog posts</h2>
    <PostsList posts={posts.slice(0, 5)} />
  </div>
</Layout>
